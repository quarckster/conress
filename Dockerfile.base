        nss-softokn-freebl \
        nss-util \
        openssl \
        pango \
        pixman \
        tar \
        tigervnc-server-minimal \
        unzip \
        vulkan-loader \
        wget \
        xdg-utils \
        xkbcomp \
        xkeyboard-config" && \
    microdnf download -y --archlist=x86_64,noarch ${PACKAGES} && \
    rpm -Uvh --nodeps *.rpm && \
    rm -f *.rpm && \
    microdnf clean all
